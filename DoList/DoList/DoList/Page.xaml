<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoList.Page">
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name="Task" Placeholder="TaskName"  Text="{Binding TaskModel.task, Mode=TwoWay}"  TextColor="Black"></Entry>
            <Entry x:Name="Date" Placeholder="Date"    Text="{Binding TaskModel.date, Mode=TwoWay}"  TextColor="Black"></Entry>
            <Entry x:Name="Time" Placeholder="Time" Text="{Binding TaskModel.time, Mode=TwoWay}" TextColor="Black"></Entry>
            <Button Text="Add" Command="{Binding AddCommand}" BackgroundColor="Red"></Button>
            <Button Text="Save" Command="{Binding SaveCommand}"  BackgroundColor="Red" ></Button>
            <Label Text="{Binding message}" TextColor="Black"></Label>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>